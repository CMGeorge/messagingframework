#!/bin/sh
#
# Check if there is message server installed already, stop it first.
#
set -e

if [ ! -e /targets/links/scratchbox.config ]; then
    if [ -x /etc/event.d/messageserver ]; then
        echo "Stop Message server...";
	stop xsession-default/messageserver
    fi
else
    echo "Running under scratchbox, do not stop Message server.";
fi
